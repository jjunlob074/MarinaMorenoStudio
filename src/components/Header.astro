   .custom-shadow {
    text-shadow: 6px 6px 12px rgba(255, 241, 204), /* Much lighter beige */
                 -6px -6px 12px rgba(255, 248, 230), /* Soft beige */
                 6px -6px 12px rgba(255, 235, 185); /* Very light beige */
  }
